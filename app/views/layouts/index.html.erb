<p id="notice"><%= notice %></p>


<div class="container">
<div class="row">
<div class="col-md-12">

<br>
<br>
<h1>Layouts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @layouts.each do |layout| %>
      <tr>
        <td><%= layout.user_id %></td>
        <td><%= layout.name %></td>
        <td><%= layout.description %></td>
        <td><%= layout.image_url %></td>
        <td><%= link_to 'Show', layout %></td>
        <td><%= link_to 'Edit', edit_layout_path(layout) %></td>
        <td><%= link_to 'Destroy', layout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Layout', new_layout_path %>


</div>
</div>
</div>
