<p id="notice"><%= notice %></p>

<h1>Favors</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Section</th>
      <th>Field</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favors.each do |favor| %>
      <tr>
        <td><%= favor.user_id %></td>
        <td><%= favor.section_id %></td>
        <td><%= favor.field_id %></td>
        <td><%= link_to 'Show', favor %></td>
        <td><%= link_to 'Edit', edit_favor_path(favor) %></td>
        <td><%= link_to 'Destroy', favor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Favor', new_favor_path %>
